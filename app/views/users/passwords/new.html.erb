<%
  @meta_title = "Forgot your password? - Feedka"
  @meta_description = "If you've forgotten your password, then you can request to get a reset password email link from below."
%>

<section class="container mt-50">
  <div class="align-center">
    <h3>Forgot your password?</h3>
    <u class="u-gold fs-1-2 italic">If you've forgotten your password, then you can request to get a reset password email link from below.</u>
  </div>

  <div class="mt-40 align-center-flex-vh">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-tag" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-field">
        <%= f.label :email, class: "form-field-label" %>
        <p class="form-field-explanation">Enter the same email address below that you've used to signup at feedka. We use this email address only for authentication purposes, thus no spam, no selling to any 3rd party providers. Like a pinky promise.</p>
        <%= f.email_field :email, autocomplete: "email", class: "form-field-input", required: true %>
      </div>
    
      <div class="align-center mt-30">
        <%= f.submit "Submit", class: "btn btn-wide btn-rev" %>
        <br />
        <br />
        <%= link_to "Back", :back, class: "btn btn-wide" %>
      </div>
    <% end %>
  </div>
</section>

<%= render "users/shared/links" %>